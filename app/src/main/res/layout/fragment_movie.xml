<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.quangnv.moviedb.screen.movie.MovieViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_now_playing"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_216"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@null"
                android:onClick="@{viewModel::onNowPlayingClick}"
                android:scaleType="centerCrop"
                android:src="@drawable/now_playing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_upcoming" />

            <View
                android:id="@+id/view_now_playing"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:background="@color/color_transparent"
                app:layout_constraintBottom_toBottomOf="@+id/image_now_playing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/image_now_playing" />

            <ImageButton
                android:id="@+id/button_now_playing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@null"
                android:clickable="false"
                android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/view_now_playing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view_now_playing" />

            <TextView
                android:id="@+id/text_now_playing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/title_now_playing"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@+id/view_now_playing"
                app:layout_constraintStart_toStartOf="@+id/view_now_playing"
                app:layout_constraintTop_toTopOf="@+id/view_now_playing" />

            <ImageView
                android:id="@+id/image_upcoming"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_216"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@null"
                android:onClick="@{viewModel::onUpcomingClick}"
                android:scaleType="centerCrop"
                android:src="@drawable/upcoming"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_popular" />

            <View
                android:id="@+id/view_upcoming"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:background="@color/color_transparent"
                app:layout_constraintBottom_toBottomOf="@+id/image_upcoming"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/image_upcoming" />

            <ImageButton
                android:id="@+id/button_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@null"
                android:clickable="false"
                android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/view_upcoming"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view_upcoming" />

            <TextView
                android:id="@+id/text_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/title_upcoming"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@+id/view_upcoming"
                app:layout_constraintStart_toStartOf="@+id/view_upcoming"
                app:layout_constraintTop_toTopOf="@+id/view_upcoming" />

            <ImageView
                android:id="@+id/image_popular"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_216"
                android:layout_marginTop="@dimen/dp_5"
                android:onClick="@{viewModel::onPopularClick}"
                android:scaleType="centerCrop"
                android:src="@drawable/popular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_top_rated" />

            <View
                android:id="@+id/view_polular"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:background="@color/color_transparent"
                app:layout_constraintBottom_toBottomOf="@+id/image_popular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/title_popular"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@+id/view_polular"
                app:layout_constraintStart_toStartOf="@+id/view_polular"
                app:layout_constraintTop_toTopOf="@+id/view_polular" />

            <ImageButton
                android:id="@+id/button_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@null"
                android:clickable="false"
                android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/view_polular"
                app:layout_constraintEnd_toEndOf="@+id/view_polular"
                app:layout_constraintTop_toTopOf="@+id/view_polular" />

            <ImageView
                android:id="@+id/image_top_rated"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_216"
                android:onClick="@{viewModel::onTopRatedClick}"
                android:scaleType="centerCrop"
                android:src="@drawable/top_rate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_top_rated"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:background="@color/color_transparent"
                app:layout_constraintBottom_toBottomOf="@+id/image_top_rated"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_top_rated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/title_top_rate"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@+id/view_top_rated"
                app:layout_constraintStart_toStartOf="@+id/view_top_rated"
                app:layout_constraintTop_toTopOf="@+id/view_top_rated" />

            <ImageButton
                android:id="@+id/button_top_rated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@null"
                android:clickable="false"
                android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/view_top_rated"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view_top_rated" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</layout>
