<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.quangnv.moviedb.screen.search.SearchMovieViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/color_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/text_search"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/background_search"
            android:hint="@string/hint_search_movie"
            android:imeOptions="actionSearch"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/dp_50"
            android:paddingRight="@dimen/dp_50"
            android:text="@{viewModel.mQuery}"
            android:textColor="@color/color_primary"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:onEditorActionListener="@{viewModel::onEditorAction}" />

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@null"
            android:onClick="@{viewModel::onBack}"
            android:src="@drawable/ic_arrow_back_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_search"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintStart_toStartOf="@+id/text_search"
            app:layout_constraintTop_toTopOf="@+id/text_search" />

        <ImageButton
            android:id="@+id/button_clear_query"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@null"
            android:onClick="@{viewModel::onClearQuery}"
            android:src="@drawable/ic_clear_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_search"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_search" />

        <include
            android:id="@+id/linear_loading_indicator"
            layout="@layout/loading_indicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="@{viewModel.mIsStartedLoad ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/linear_failed_indicator"
            app:layout_constraintEnd_toEndOf="@+id/linear_failed_indicator"
            app:layout_constraintStart_toStartOf="@+id/linear_failed_indicator"
            app:layout_constraintTop_toTopOf="@+id/linear_failed_indicator" />

        <include
            android:id="@+id/linear_failed_indicator"
            layout="@layout/failed_indicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="@{viewModel::onReloadClick}"
            android:visibility="@{viewModel.mIsFailedLoad ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/recycler_movie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recycler_movie" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_movie"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adapter="@{viewModel.adapter}"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />
    </android.support.constraint.ConstraintLayout>
</layout>
